doctype html
html
  head
    meta charset="utf-8"
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"
    meta name="description" content="#{data.site.description}"
    title = data.site.title + ' | ' + current_page.data.title

    = stylesheet_link_tag data.resources.stylesheets

  body class="#{page_classes}" data-baseurl="#{config[:http_prefix]}"
    = partial 'partials/header'

    = partial 'partials/map', locals: { map_id: 'invest' }

    main
      = partial 'partials/intro'
      / = partial 'partials/pages'
      = partial 'partials/tour'

    aside#drawer.drawer
      section
        article.controls
          .column.col-12
            = link_to '/index.html', { class: 'close', data: { pjax: true } } do
              == "&times;"
        article
          .column.col-12
            #page-content.page-content
              = yield

    footer


  = javascript_include_tag data.resources.scripts
