section.pages
  article.intro
    .column.col-12
      = data.site.description
  article.subpages
    - pages = get_page.children.sort { |a, b| a.data.sort <=> b.data.sort }
    .column.col-12.subpage-link
      ul
        - pages.each_with_index do |page, index|
          li = link_to page.data.title, page.url, { class: 'page-link', data: { pjax: true } }
